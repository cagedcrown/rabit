<h1 id='add-post'>Edit Post</h1>

<%= form_for @comment do |f| %>

<div class="new-post-container">

	<h2>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</h2>

	<h2>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</h2>

	<h2>
		<%= f.submit "Update Post" %>
	</h2>
<% end %>
</div>
