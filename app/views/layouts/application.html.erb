<!DOCTYPE html>
<html>
<head>
  <title>Rabit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300' rel='stylesheet' type='text/css'>

</head>
<body>
  <div class='wrapper'>
    <header>
      <div class="nav">
        <span id="svg"> <%= link_to image_tag( 'logo.svg' ), root_path %></span>
        <ul>
        <% if current_user %>
          <li><%= link_to "Notes", user_posts_path(current_user.id) %></li>
          <li><a href="/events">Planner</a></li>
          <li><a href="#">Study</a></li>
          <li><a href="#">Stats</a></li>
          <li><a href="#">Profile</a></li>
          <li><a href="/signout">Log Out<img id="twitter" src="/assets/twitter_icon_32.png"></a></li>
          <% else %>
          <li><a id="twitter-sign-in" href="/auth/twitter">Log In<img id="twitter" src="/assets/twitter_icon_32.png"></a></li>
            <% end %>
          </ul>
        </div>
      </header>

      <div class="content">
        <%= yield %>
      </div>
    </div>
    <link src="assets/js/jquery.js">
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script>
    $('#calendar').fullCalendar();
    </script>
  </body>
  </html>

