<!DOCTYPE html>
<html>
<head>
  <title>Rabit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300' rel='stylesheet' type='text/css'>

</head>
<body>
  <header>
    <div class="logo">
      <span id="svg"> <%= link_to image_tag( 'logo.svg' ), root_path %></span>
    </div>
    <!-- 			<form class="search">
    <input type="search" placeholder="Search A Venue" id="venue-search">
    <input class="hide" type="submit" value="Submit">
  </form> -->
  <nav class="buttons">
    <% if current_user %>
    <a href="#"> <%= current_user.name %> </a>
    <%= link_to "Sign out", signout_path %>
    <% else %>
    <%= link_to "Sign in with Twitter", "/auth/twitter?force_login=true" %>
    <% end %>
    <div>
      <ul>
        <li><a href="#">Plan</a></li>
        <li><a href="#">Study</a></li>
        <li><a href="#">Stats</a></li>
        <li><a href="#">Profile</a></li>
      </ul>
    </div>
    <div>
      <%= link_to "Posts", user_posts_path(current_user.id) %>
    </div>
  </nav>
</header>

<div class="content">

</div>
<%= yield %>

<link src="assets/js/jquery.js">

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
